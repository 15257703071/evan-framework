<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">
	<description>Jms的spring配置，所有子模块中如需要使用jms消息中间件的，需要加载该spring配置文件</description>

	<!-- ActiveMQ 连接工厂 -->
	<bean id="connectionFactory" class="org.apache.activemq.spring.ActiveMQConnectionFactory">
		<!-- ActiveMQ服务用户 -->
		<property name="userName" value="${activemq.userName}" />
		<!-- ActiveMQ服务密码 -->
		<property name="password" value="${activemq.password}" />
		<!-- 消息broker连接配置 -->
		<property name="brokerURL" value="${activemq.brokerURL}" />
		<!-- 设置异步发送 -->
		<property name="useAsyncSend" value="${activemq.useAsyncSend}" />
	</bean>
	<!-- 缓存session链接 -->
	<bean id="cachingConnectionFactory" class="org.springframework.jms.connection.CachingConnectionFactory">
		<!-- 目标ConnectionFactory对应真实的可以产生JMS Connection的ConnectionFactory -->
		<property name="targetConnectionFactory" ref="connectionFactory" />
		<!-- Session缓存数量,这里属性也可以直接在这里配置 -->
		<property name="sessionCacheSize" value="${activemq.sessionCacheSize}" />
	</bean>
	<!-- PTP jms模板 -->
	<bean id="jmsTemplate" class="org.springframework.jms.core.JmsTemplate">
		<property name="connectionFactory" ref="cachingConnectionFactory" />
		<!-- 设置点对点的模式，默认是false -->
		<property name="pubSubDomain" value="${activemq.pubSubDomain}" />
		<!-- 发送模式  DeliveryMode.NON_PERSISTENT=1:非持久 -->
		<!-- DeliveryMode.PERSISTENT=2:持久-->
		<property name="deliveryMode" value="${activemq.deliveryMode}" />
		<property name="defaultDestinationName" value="${activemq.defaultDestinationName}" />
		<property name="sessionAcknowledgeMode" value="${activemq.sessionAcknowledgeMode}" />
		<!--<property name="messageConverter">-->
			<!--<bean class="org.springframework.jms.support.converter.SimpleMessageConverter" />-->
		<!--</property>-->
		<property name="messageConverter" ref="simpleMessageConverter"/>
	</bean>
	<!-- 消费端也需要用 -->
	<bean id="simpleMessageConverter" class="org.springframework.jms.support.converter.SimpleMessageConverter" />
	<!-- 消息 ActiveMQHelper 配置-->
	<bean id="activeMQHelper" class="com.ancun.core.mq.impl.ActiveMQHelperImpl" init-method="init">
		<property name="sysConfig" ref="sysConfig"></property>
		<property name="jmsTemplate" ref="jmsTemplate"></property>
		<property name="activeMQConnectionFactory" ref="connectionFactory"></property>
	</bean>
</beans>

