<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <description>系统参数配置</description>

    <bean id="sysParameterDao" class="com.ancun.core.sysparameter.impl.SysParameterDao">
    </bean>
    <bean id="sysParameterService" class="com.ancun.core.sysparameter.impl.SysParameterServiceImpl">
    </bean>
    <bean id="systemParameterCache" class="com.ancun.core.sysparameter.cache.SystemParameterCache">
    </bean>
    <!-- EhCache -->
    <bean id="ehCacheManagerSysparameter" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
        <property name="configLocation">
            <value>classpath:sysparameter-ehcache.xml</value>
        </property>
        <property name="cacheManagerName" value="ehCacheManagerSysparameter"/>
        <!--<property name="shared" value="true" /> -->
    </bean>
</beans>