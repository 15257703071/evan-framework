<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <description>基础数据配置</description>

    <!-- 枚举数据字典加载器 -->
    <bean id="dataDictionaryEnumService" class="com.ancun.core.datadict.impl.DataDictionaryEnumLoader"></bean>

    <bean id="pubDataDictionaryDao" class="com.ancun.core.datadict.impl.PubDataDictionaryDao">
    </bean>
    <bean id="dataDictionaryService" class="com.ancun.core.datadict.impl.DataDictionaryServiceImpl">
    </bean>
    <bean id="dataDictionaryCacheForData" class="com.ancun.core.datadict.cache.DataDictionaryCacheForData">
    </bean>
    <bean id="dataDictionaryCacheForName" class="com.ancun.core.datadict.cache.DataDictionaryCacheForName">
    </bean>

    <!-- EhCache -->
    <bean id="ehCacheManagerDataDict" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
        <property name="configLocation">
            <value>classpath:datadict-ehcache.xml</value>
        </property>
        <property name="cacheManagerName" value="ehCacheManagerDataDict"/>
        <!--<property name="shared" value="true" /> -->
    </bean>
</beans>