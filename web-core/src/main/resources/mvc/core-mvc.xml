<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context" xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans	
		http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-4.0.xsd
		http://www.springframework.org/schema/mvc 
		http://www.springframework.org/schema/mvc/spring-mvc.xsd">

	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:config*.properties</value>
			</list>
		</property>
	</bean>

	<bean id="stringHttpMessageConverter" class="org.springframework.http.converter.StringHttpMessageConverter">
		<constructor-arg value="${web.encoding}" />
	</bean>
	<bean id="objectMapper" class="com.ancun.core.ObjectMapper"></bean>
	<bean id="mappingJacksonHttpMessageConverter" class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
		<!--
		<property name="supportedMediaTypes">
			<list>
				<bean class="org.springframework.http.MediaType">
					<constructor-arg index="0" value="application" />
					<constructor-arg index="1" value="json" />
					<constructor-arg index="2" value="${web.encoding}" />
				</bean>
				
				<bean class="org.springframework.http.MediaType">
					<constructor-arg index="0" value="application" />
					<constructor-arg index="1" value="xml" />
					<constructor-arg index="2" value="${web.encoding}" />
				</bean> 
			</list>
		</property> -->
		<property name="objectMapper" ref="objectMapper"></property>		
	</bean>

	<!-- 类型转换 -->
	<bean id="conversionService" class="org.springframework.format.support.FormattingConversionServiceFactoryBean">
		<property name="converters">
			<bean class="com.ancun.core.web.converters.StringToDateConverter"></bean>
		</property>
	</bean>

	<!-- validator -->
	<bean id="validator" class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean">
		<!--默认采用HibernateValidator，不用另行配置 <property name="providerClass" value="org.hibernate.validator.HibernateValidator" /> -->
	</bean>

	<bean id="monitorIntercepter" class="com.ancun.core.web.intercepter.MonitorIntercepter"></bean>
	<bean id="csrfIntercepter" class="com.ancun.core.web.intercepter.CsrfIntercepter">
		<property name="csrfTokenUtils" ref="csrfTokenUtils"></property>		
	</bean>
	
</beans>