<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<!-- Http client 配置 -->
	<bean id="httpClientFactory" class="com.ancun.core.httpclient.HttpClientFactory"></bean>
	<bean id="clientHttpRequestFactory" class="org.springframework.http.client.HttpComponentsClientHttpRequestFactory"></bean>
	<bean id="restTemplate" class="org.springframework.web.client.RestTemplate">
		<property name="requestFactory" ref="clientHttpRequestFactory"></property>
		<!--property name="interceptors"></property> -->
	</bean>
</beans>

